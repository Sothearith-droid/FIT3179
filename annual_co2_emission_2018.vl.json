{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Emission_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10000000000,
        "step": 1000,
        "name": "Emission per capita: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Sothearith-droid/FIT3179/main/annual_co2_emission_2018.csv"
        },
        "key": "Country",
        "fields": ["CO2_emission"]
      }
    },
    {"filter": "datum.CO2_emission > Emission_Above"}
  ],
  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["CO2_emission"],
          "bind": "legend"
        }
      },
      "mark": {"type": "geoshape", "stroke": "grey"},
      "encoding": {
        "color": {
          "field": "CO2_emission",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              50000000,
              100000000,
              250000000,
              500000000,
              1000000000,
              2500000000,
              5000000000,
              7500000000
            ],
            "range": [
              "#fff5f0",
              "#fee0d2",
              "#fcbba1",
              "#fc9272",
              "#fb6a4a",
              "#ef3b2c",
              "#cb181d",
              "#99000d",
              "#67000d"
            ]
          },
          "legend": {"format": ""}
        },
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.9},
          "value": 0.2
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "CO2_emission", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}
